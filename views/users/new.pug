extend ../layout

block content
  div
    form(action='/users', method='post')
      legend New User
      .form-group
        label(for='user-username') Username
        input#user-username.form-control(type='text', name='username', placeholder='Username')
      .form-group
        label(for='user-password') Password
        input#user-password.form-control(type='password', name='password', placeholder='Password')
      .text-right
        button.btn.btn-primary(type='submit') Submit
